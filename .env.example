# .env.example
DATABASE_URL="postgresql://<USUARIO>:<PASSWORD>@<HOST>:<PUERTO>/<BASE_DE_DATOS>?schema=public"
SHADOW_DATABASE_URL="postgresql://<USUARIO>:<PASSWORD>@<HOST>:<PUERTO>/<BASE_DE_DATOS>?schema=shadow"
REDIS_URL="redis://localhost:6379"
JWT_PRIVATE_KEY_PATH="./secrets/jwtRS256.key"
JWT_PUBLIC_KEY_PATH="./secrets/jwtRS256.key.pub"
# También puedes definir el contenido inline (útil para CI/CD):
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
JWT_PASSWORD_RESET_EXPIRES_IN="30m"
PORT=3000
BCRYPT_SALT_ROUNDS=10
